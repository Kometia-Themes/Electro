    <div class="container">
      <h2 class="text-center">{{ settings.feature_products_trending_title }}</h2>
      <hr class="hr-small">
      {% for products_row in featured_collection.products | batch(4) %}
        <div class="row symmetrical-container">
        {% for product in products_row %}
          {% include '_product-item.twig' %}
        {% endfor %}
        </div>
      {% endfor %}
    </div>
  </section>
