{% if settings.featured_space_1 %}
  <section class="featured-space-1 {{ settings.featured_space_1_bg}}">
    <div id="featured-space-1-home">
      <div class="container">
      {% if settings.featured_space_1_image is not empty and settings.featured_space_1_image and settings.featured_space_1_display_image %}
        <img src="{{ settings.featured_space_1_image }}" alt="{{store.name}}">
        <div class="row">
          <div class="col-sm-5 pull-right">
            <h1>{{ settings.featured_space_1_title }}</h1>
            <hr class="hr-small hr-left">
            <p>{{ settings.featured_space_1_desc|raw }}</p>
            <br>
          {% if settings.featured_space_1_btn %}
            <a href="{{ settings.featured_space_1_btn_url }}" class="btn btn-default" alt="{{ store.name }}">{{ settings.featured_space_1_btn_text }} &nbsp;<i class="zmdi zmdi-arrow-right"></i></a>
          {% endif %}
          </div>
        </div>
      {% else %}
        <div class="text-center">
          <h1>{{ settings.featured_space_1_title }}</h1>
          <hr class="hr-small">
          <p>{{ settings.featured_space_1_desc|raw }}</p>
          <br>
        {% if settings.featured_space_1_btn %}
          <a href="{{ settings.featured_space_1_btn_url }}" class="btn btn-default" alt="{{ store.name }}">{{ settings.featured_space_1_btn_text }} &nbsp;<i class="zmdi zmdi-arrow-right"></i></a>
        {% endif %}
        </div>
      {% endif %}
      </div>
    </div>
  </section>
{% endif %}
