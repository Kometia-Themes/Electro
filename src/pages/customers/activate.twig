{% extends 'layout.twig' %}
{% set page_title = 'Activa tu cuenta' %}
{% block body_class %}account account-activate has-featured{% endblock body_class %}

{% block body %}
<section class="featured-block {{ settings.gradient_pages }}">
  <div class="container">
    <h1 class="title">Activa tu cuenta</h1>
  </div>
</section>
<br class="hidden-xs"><br class="hidden-xs">
<section class="page-content">
  <div class="container">
    <div class="row page">
      <div class="col-sm-offset-3 col-sm-6">
        <form action="/cuenta/activar" method="POST" role="form" class="login-form">
            <div class="form-group">
               <label for="password">Nueva contrase単a</label>
               <input type="password" class="form-control" id="password" name="password" placeholder="Escribe tu contrase単a" required>
            </div>
            <div class="form-group">
                <label for="password_confirmation">Confirma tu contrase単a</label>
                <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="Confirma tu contrase単a" required>
            </div>
            <div class="form-group">
                  <input class="btn btn-primary btn-block" type="submit" name="submit" id="submit" value="&nbsp; Activar cuenta &nbsp;">
                </div>
                <input type="hidden" name="token" value="{{ token }}">
                <input type="hidden" name="email" value="{{ email }}">
            </div>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock body %}
