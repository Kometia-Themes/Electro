{% extends 'layout.twig' %}
{% block body_class %}post no-has-sidebar{% endblock body_class %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <article class="post">
        <header>
          <h1 class="title post-title">{{ post.title }}</h1>
          <ul class="post-meta">
            <li>{{ post.published_at | date }}</li>
          {% if post.tags | length > 0 %}
            {% for tag in post.tags %}
              <li><a href="/blogs/{{ blog.permalink }}/tags/{{ tag.permalink }}" title="{{ tag.title }}">{{ tag.title }}</a></li>
            {% endfor %}
          {% endif %}
          </ul>
          {% if settings.enable_share_blog %}
            {% include '_social-share.twig' %}
          {% endif %}
          {% if post.image_url is not empty  %}
          <figure class="post-featured-img">
            <img src="{{ post.image_url ~ '&w=370&h=370&fit=crop' }}" alt="{{ post.title}} - {{ store.name }}">
          </figure>
          {% endif %}
        </header>
        <section class="post-content">
          {{ post.content|raw }}
        </section>
      </article>
    </div>
  </div>
</div>
{% endblock body %}
